# TESTING CONFIGURATION
FLASK_ENV=testing
TESTING=True

# Security
SECRET_KEY=your-dev-secret-here
CSRF_ENABLED=False
CORS_ENABLED=False  # Disable in testing
TOKEN_EXPIRY=300

# Database
DATABASE_URL=sqlite:///:memory:
SQLALCHEMY_DATABASE_URI=sqlite:///:memory:


# Debugging
DEBUG=False
DEBUG_TB_ENABLED=False
PROPAGATE_EXCEPTIONS=True 


# Test User Credentials
TEST_ADMIN_USERNAME=test_admin
TEST_ADMIN_EMAIL=test_admin@example.com
TEST_ADMIN__PIN=87654321
TEST_USER_PIN=12345678 

# API Behavior
API_RATE_LIMIT=1000/1second  # Disable throttling in tests